//
const body = document.body // reference to the body of page
body.append("Hello","Bye") // can append strings, can append multiple
body.appendChild()
 // can only append elements like tags, only one at a time

 const div = document.createElement("div");
 div.innerText="Hello World";
 div.textContent="Hello"
 //textContent will print out all of the text content
 //innerText will only print out the text that is visible on page
 body.append(div)
 body.appendChild(div)
 const div = document.querySelector("div")
 
 //querySelector is the newer feature.

//getElementById is better supported than querySelector.

//querySelector is better supported than getElementsByClassName.

//querySelector lets you find elements with rules that can't be expressed with getElementById and getElementsByClassName

const strong = document.createElement("strong")
strong.innerText = "hello"
div.append(strong)

const div = document.querySelector('div')
const spanHi = document.querySelector('#hi')
const spanBye = document.querySelector('#bye')
spanBye.remove() // removes from html
div.append(spanBye)

div.removeChild(spanHi)

spanHi.getAttribute("id") or spanHi.id
spanHi.removeAttribute("id")

spanHi.classList.add('newc;ass')
spanHi.classList.remove("hi1")
spanHi.classList.toggle('newclass', false)//remove if it exists or add if it doesnt, 
spanHi.style.color="red"





